@{
    //Title inserted in layout page
    ViewData["Title"] = "Grade Calculator";
}
<!--Link to Calculator Model-->
@model Mission2_3.Models.CalculatorModel;
<!--Form that gathers the % received in each category and then returns overall % and letter grade when submitted-->
<h3>Grade Calculator</h3>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" type="number" asp-for="assignments" />%<br />
    <label>Group Project:</label>
    <input id="groupProject" type="number" asp-for="groupProject" />%<br />
    <label>Quizzes:</label>
    <input id="quizzes" type="number" asp-for="quizzes" />%<br />
    <label>Exams:</label>
    <input id="exams" type="number" asp-for="exams" />%<br />
    <label>INTEX:</label>
    <input id="intex" type="number" asp-for="intex" />%<br />
    <input id="Calcgrade" type="submit" value="Submit" />
</form>

<!--Show validation alerts-->
<div asp-validation-summary="All"></div>